!!!
%html
	%head
		%title= yield(:title) || "dish.fm"
		%meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
		= stylesheet_link_tag :all
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body
		#container
			#wrapper
				= yield
		#footer
			#share
			#top_search
				%h2 Top searches
				%ul
					%li=raw"#{link_to 'tiramisu', ''} @ #{link_to 'New York', ''}"
					%li=raw"#{link_to 'steak', ''} @ #{link_to 'San Francisco', ''}"
					%li=raw"#{link_to 'something', ''} @ #{link_to 'somwhere', ''}"
			#links
				%ul
					%li=link_to 'About', ''
					%li=link_to 'How it works', ''
					%li=link_to 'FAQ', ''
					%li=link_to 'Blog', ''
					%li=link_to 'Facebook', ''
					%li=link_to 'Twitter', ''
					%li=link_to 'Terms', ''
					%li=link_to 'Privacy', ''
			